{
    "express": {
        //"view engine": "js",
        "views": "path:./public/templates"
        //"views": "path:./.build/templates"
    },
    "view engines": {
        "dust": {
            "module": "engine-munger",
            "renderer" : {
                "method": "dust",
                "arguments": [{"cache": false}]
            }
        },
        "js": {
            "module": "engine-munger",
            "renderer": {
                "method": "js",
                "arguments": [{"cache": false}]
            }
        }
    },
    "specialization": {
        "partialSamples/partial1" : [
            {
                "template" : "bar/bar_partial1",
                "rules" : {
                    "doIt" : true
                }
            }
        ]
    },
    "i18n": {
        "fallback": "en-US",
        "contentPath": "path:./locales"
    }

}
